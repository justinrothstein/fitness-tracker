@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Create Exercise";
}

@section scripts{
    <script src="~/Content/angular/Fitness/fitnessCreateController.js"></script>
}

<div class="container" ng-app="fitnessModule" ng-controller="fitnessCreateController">
    <div class="row">
        <div class="row">
            <div class="col-lg-2">
                <h3>Exercise Name</h3>
            </div>
            <div class="col-lg-4">
                <h3>Description</h3>
            </div>
            <div class="col-lg-1">
                <h3>Sets</h3>
            </div>
            <div class="col-lg-1">
                <h3>Reps</h3>
            </div>
            <div class="col-lg-1">
                <h3>Weight</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-2">
                <input class="input-sm" type="text"
                       name="Exercise Name"
                       ng-model="model.exerciseName"
                       ng-required="true" />
            </div>
            <div class="col-lg-4">
                <input class="input-sm" type="text"
                       name="Description"
                       ng-model="model.exerciseDescription"
                       ng-required="true" />
            </div>
            <div class="col-lg-1">
                <input class="input-sm" type="text"
                       name="Sets"
                       ng-model="model.exerciseSets"
                       ng-required="true" />
            </div>
            <div class="col-lg-1">
                <input class="input-sm" type="text"
                       name="Reps"
                       ng-model="model.exerciseReps"
                       ng-required="true" />
            </div>
            <div class="col-lg-1">
                <input class="input-sm" type="text"
                       name="Reps"
                       ng-model="model.exerciseWeight"
                       ng-required="true" />
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <button class="btn btn-default navbar-btn" ng-click="createExercise('@User.Identity.GetUserName()');"
                        ng-disabled="!model.exerciseName || !model.exerciseDescription">
                    <span class="glyphicon glyphicon-floppy-save"></span> Create Exercise
                </button>
            </div>
        </div>
    </div>
</div>